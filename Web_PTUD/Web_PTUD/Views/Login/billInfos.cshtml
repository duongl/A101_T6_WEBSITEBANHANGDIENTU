@model IEnumerable<ShopBanLaptop2.Models.BillInfoToShow>

@{
    ViewBag.Title = "billInfos";
    Layout = "~/Views/Shared/_secondLayout.cshtml";
}

<h2>Chi tiết hóa đơn</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.count)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Product/Details/@item.Id">
                    <div id="lapName">@Html.DisplayFor(modelItem => item.Name) </div>
                </a>
            </td>
            <td>
                <img class="rounded mx-auto d-block img-fluid" src="~/Access/images/@item.Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.count)
            </td>

        </tr>
    }



</table>
